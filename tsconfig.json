{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "serve/compiled-js",
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.*"],
  "exclude": ["node_modules"]
}